{
  "manifest_version": 2,

  "name": "Usage",
  "description": "This extension will make you happy",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },

  "chrome_url_overrides" : {
    "newtab": "popup.html"
  },

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "permissions": [
   "activeTab",
   "storage",
   "history",
   "contextMenus"
   ],

  "background": {
    "page": "background.html"
  }
}